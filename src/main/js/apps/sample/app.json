{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "banner",
            "console",
            "custominfo",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "toolset",
            "toolrules",
            "mapnavigation",
            "popups-default",
            "dn_vuetoc"
        ],
        "require": [
            "${app}/app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_vuetoc": {
            "TableOfContents": {
                "showBasemaps": true,
                "showOperationalLayer": true,
                "showLoadingStatus": true,
                "showOperationalLayerHeaderMenu": true,
                "showLayerMenu": true,
                "showResetButton": true,
                "showCloseButton": true,
                "expandInitially": true,
                "visibleIconClass": "check_box",
                "invisibleIconClass": "check_box_outline_blank"
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "https://www.conterra.de/~/media/conterra/images/site_logos/conterra-logo.ashx",
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "custominfo": {
            "CustomInfoToggleTool": [
                {
                    "id": "customInfoTool",
                    "activateOnStartup": true,
                    "title": "Information",
                    "tooltip": "Information",
                    "iconClass": "icon-custom-info-info",
                    "toolClass": "ctInfo",
                    "togglable": true,
                    "widgetSettings": {
                        "content": "${custominfo.content}",
                        "window": {
                            "title": "Information",
                            "marginBox": {
                                "w": 300,
                                "h": 140,
                                "l": 25,
                                "b": 70
                            },
                            "draggable": true,
                            "closable": true,
                            "modal": false,
                            "maximizable": false,
                            "resizable": false
                        }
                    }
                }
            ]
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "streets",
                        "title": "${map.basemaps.streets}",
                        "basemap": "streets",
                        "selected": true
                    },
                    {
                        "id": "topo",
                        "title": "${map.basemaps.topo}",
                        "basemap": "topo",
                        "icon": "filter_hdr"
                    },
                    {
                        "id": "satellite",
                        "title": "${map.basemaps.satellite}",
                        "basemap": "satellite",
                        "icon": "photo_camera"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "koeln3",
                            "title": "${map.koeln3.title}",
                            "url": "https://services.conterra.de/arcgis/rest/services/common/koeln/MapServer",
                            "type": "AGS_DYNAMIC",
                            "visible": true,
                            "sublayers": [
                                {
                                    "title": "${map.koeln3.sights.title}",
                                    "id": 3,
                                    "popupTemplate": {
                                        "title": "${map.koeln3.sights.titleSingle}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln3.sights.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "STADTBEZIRK",
                                                        "label": "${common.precint}"
                                                    },
                                                    {
                                                        "fieldName": "HYPERLINK",
                                                        "label": "${common.furtherinfo}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln3.playgrounds.title}",
                                    "id": 2,
                                    "visible": false,
                                    "popupTemplate": {
                                        "title": "{Typ}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln3.playgrounds.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "Basketballk\u00F6rbe",
                                                        "label": "${map.koeln3.playgrounds.baskets}"
                                                    },
                                                    {
                                                        "fieldName": "Fussballtore",
                                                        "label": "${map.koeln3.playgrounds.goals}"
                                                    },
                                                    {
                                                        "fieldName": "Tischtennis_Tische",
                                                        "label": "${map.koeln3.playgrounds.tables}"
                                                    },
                                                    {
                                                        "fieldName": "Torwand",
                                                        "label": "${map.koeln3.playgrounds.walls}"
                                                    },
                                                    {
                                                        "fieldName": "Skaten",
                                                        "label": "${map.koeln3.playgrounds.skate}"
                                                    },
                                                    {
                                                        "fieldName": "Sonstiges",
                                                        "label": "${map.koeln3.playgrounds.misc}"
                                                    }
                                                ]
                                            }
                                        ]
                                    }
                                },
                                {
                                    "title": "${map.koeln3.places.title}",
                                    "id": 1,
                                    "popupTemplate": {
                                        "title": "${map.koeln3.places.titleSingle}",
                                        "content": [
                                            {
                                                "type": "text",
                                                "text": "${map.koeln3.places.text}"
                                            },
                                            {
                                                "type": "fields",
                                                "fieldInfos": [
                                                    {
                                                        "fieldName": "ADRESSE",
                                                        "label": "${common.address}"
                                                    },
                                                    {
                                                        "fieldName": "STADTVIERT",
                                                        "label": "${common.district}"
                                                    },
                                                    {
                                                        "fieldName": "HYPERLINK",
                                                        "label": "${common.furtherinfo}"
                                                    }
                                                ]
                                            }
                                        ],
                                        "expressionInfos": [
                                            {
                                                "name": "carrier",
                                                "expression": "IIf($feature.TRAEGER == \"Privat\", \"${common.private}\", \"${common.municipal}\")"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ],
                    "ground": {
                        "url": "https://elevation3d.arcgis.com/arcgis/rest/services/WorldElevation3D/Terrain3D/ImageServer",
                        "type": "ELEVATION"
                    }
                },
                "view": {
                    "viewmode": "2D",
                    "extent": {
                        "xmin": 753914,
                        "ymin": 6590000,
                        "xmax": 797273,
                        "ymax": 6635000,
                        "spatialReference": 3857
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "everlasting"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": []
                    }
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    }
                ]
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "vueTocToggleTool"
                ]
            }
        }
    }
}
