{
    "name": "dn_vuetoc",
    "version": "1.2.1-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-vuetoc",
    "dependencies": {
        "apprt-vue": "^4.2.0",
        "apprt-vuetify": "^4.2.0",
        "apprt-binding": "^4.2.0",
        "apprt-core": "^4.2.0",
        "esri-widgets": "^4.2.0",
        "esri": "^4.6.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "mapContent",
            "sublayout": [
                "desktop",
                "tablet_landscape",
                "tablet_portrait"
            ],
            "window": {
                "autofocus": false,
                "dockTool": "vueTocToggleTool",
                "dockable": true,
                "dockingBar": "${id}-dockingBarBottomLeft",
                "marginBox": {
                    "t": 40,
                    "b": 40,
                    "w": 400,
                    "r": 0
                },
                "resizable": true,
                "resizeAxis": {
                    "l": true,
                    "r": false,
                    "t": false,
                    "b": false
                },
                "fixEdgesInViewPort": {
                    "r": true,
                    "b": true,
                    "t": true
                },
                "minimizeOnClose": true,
                "windowClass": "noTitleBarAndWindowTools noPadding vue-toc-window"
            }
        },
        {
            "widgetRole": "mapContent",
            "sublayout": [
                "mobile_landscape",
                "mobile_portrait"
            ],
            "window": {
                "autofocus": false,
                "dockable": true,
                "dockingBar": "${id}-dockingBarBottomLeft",
                "dockTool": "vueTocToggleTool",
                "minimizeOnClose": true,
                "resizable": false,
                "marginBox": {
                    "w": "100%",
                    "h": "100%",
                    "b": 40,
                    "l": 0
                },
                "windowClass": "mobileWindow noTitleBarAndWindowTools noPadding vue-toc-window"
            }
        },
        {
            "widgetRole": "vuetocLegend",
            "window": {
                "minimizeOnClose": true,
                "resizable": true,
                "marginBox": {
                    "w": 400,
                    "h": 400
                }
            }
        }
    ],
    "components": [
        {
            "name": "MapContentWidgetFactory",
            "provides": "dijit.Widget",
            "instanceFactory": true,
            "properties": {
                "widgetRole": "mapContent",
                "showBasemaps": true,
                "showOperationalLayer": true,
                "showLegend": true,
                "showLoadingStatus": true,
                "showOperationalLayerHeaderMenu": true,
                "showLayerMenu": true,
                "showResetButton": true,
                "showCloseButton": true,
                "visibleIconClass": "check_box",
                "invisibleIconClass": "check_box_outline_blank"
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_basemapModel",
                    "providing": "map-basemaps-api.BasemapsModel"
                },
                {
                    "name": "_tool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=vueTocToggleTool)"
                },
                {
                    "name": "_layerActionResolver",
                    "providing": "vue-toc.LayerActionResolver"
                }
            ]
        },
        {
            "name": "LayerActionResolver",
            "provides": "vue-toc.LayerActionResolver",
            "references": [
                {
                    "name": "layerActionFactory",
                    "providing": "vue-toc.LayerActionFactory",
                    "cardinality": "0..n"
                }
            ]
        },
        {
            "name": "ZoomToExtentAction",
            "properties": {
                "Service-Ranking": 40
            },
            "provides": "vue-toc.LayerActionFactory"
        },
        {
            "name": "OpacityAction",
            "properties": {
                "Service-Ranking": 30
            },
            "provides": "vue-toc.LayerActionFactory"
        },
        {
            "name": "ShowSublayerAction",
            "properties": {
                "Service-Ranking": 20
            },
            "provides": "vue-toc.LayerActionFactory"
        },
        {
            "name": "HideSublayerAction",
            "properties": {
                "Service-Ranking": 10
            },
            "provides": "vue-toc.LayerActionFactory"
        },
        {
            "name": "VueTocToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "vueTocToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-layer-settings",
                "toolRole": "toolset",
                "togglable": true,
                "rules": {
                    "noGroup": true
                }
            }
        }
    ]
}
