{
    "name": "dn_tocapi",
    "version": "2.0.3-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-vuetoc",
    "dependencies": {
        "apprt-vue": "^4.6.0",
        "apprt-vuetify": "^4.6.0",
        "apprt-binding": "^4.6.0",
        "apprt-core": "^4.6.0",
        "esri": "^4.9.2"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "components": [
        {
            "name": "TableOfContentsFactory",
            "provides": "dn_tocapi.TableOfContentsFactory",
            "componentFactory" : true,
            "instanceFactory" : true,
            "properties": {
                "widgetRole": "dnTocWidget",
                "showBasemaps": true,
                "showOperationalLayer": true,
                "showLoadingStatus": true,
                "showOperationalLayerHeaderMenu": true,
                "showLayerMenu": true,
                "showResetButton": true,
                "showCloseButton": true,
                "expandInitially": true,
                "visibleIconClass": "check_box",
                "invisibleIconClass": "check_box_outline_blank"
            },
            "references": [
                {
                    "name": "_tocModel",
                    "providing": "dn_tocapi.TocModelSynchronizer"
                },
                {
                    "name": "_tocVisibility",
                    "providing": "dn_tocapi.TocVisibilitySynchronizer"
                },
                {
                    "name": "_basemapModel",
                    "providing": "map-basemaps-api.BasemapsModel"
                },
                {
                    "name": "_tool",
                    "providing": "dn_tocapi.ToggleTool"
                },
                {
                    "name": "_layerActionResolver",
                    "providing": "dn_tocapi.LayerActionResolver"
                }
            ]
        },
        {
            "name": "TocModelSynchronizer",
            "provides": "dn_tocapi.TocModelSynchronizer",
            "references": [
                {
                    "name": "_map",
                    "providing": "map-widget.Map"
                },
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "LayerActionResolver",
            "provides": "dn_tocapi.LayerActionResolver",
            "references": [
                {
                    "name": "layerActionFactory",
                    "providing": "dn_tocapi.LayerActionFactory",
                    "cardinality": "0..n"
                }
            ]
        }
    ]
}
